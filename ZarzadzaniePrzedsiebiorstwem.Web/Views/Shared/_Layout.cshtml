@inject ZarzadzaniePrzedsiebiorstwem.Services.Interfaces.IUserService _userService
@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="pl">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/ZarzadzaniePrzedsiebiorstwem.Web.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/bulma.min.css" />
	<link rel="stylesheet" href="~/css/basicStyling.css" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>ZarzadzaniePrzedsiebiorstwem</title>
	
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<style>
		html,
		body {
			margin: 0;
			padding: 0;
		}

		.hero-head {
			background-color: #8EC5FC;
			background-image: linear-gradient(62deg, #8EC5FC 0%, #E0C3FC 100%);

		}

		.navbar-brand {
			color: #FFF;
			font-size: 24px;
			font-weight: bold;
			text-decoration: none;
		}

		.navbar-burger span {
			background-color: #FFF;
		}

		.navbar-menu {
			background-color: transparent;
		}

		.navbar-item a.button {
			border-color: #FFF;
		}

		.navbar-item a.button.is-active {
				background-color: transparent;
				color: #FFF;
		}
		
		.hero-foot {
			background-color: #8EC5FC;
			background-image: linear-gradient(62deg, #8EC5FC 0%, #E0C3FC 100%);

			position: fixed;
			bottom: 0;
			width: 100%;
		}

		.tabs {
			background-color: transparent;
		}

		.has-text-link li {
			color: #3273dc;
		}
	</style>
</head>
<body>

	<section class="hero is-white">
		<div class="hero-head">
			<nav class="navbar card">
				<div class="container">
					<div class="navbar-brand">
						<div class="navbar-item">
							<a href="#" class="button is-active">Magenary</a>
						</div>
						<span class="navbar-burger" data-target="navbarMenuHeroB">
							<span></span>
							<span></span>
							<span></span>
						</span>
					</div>
					<div id="navbarMenuHeroB" class="navbar-menu">
						<div class="navbar-end">
							<div id="authenticationStatusContainer">
								@await Html.PartialAsync("_AuthenticationStatus");
							</div>
						</div>
					</div>
				</div>
			</nav>
		</div>
	</section>

	<section class="section">
		<div class="container">
			@RenderBody()
		</div>
	</section>

	<div class="hero-foot">
		<nav class="tabs">
			<div class="container has-text-link">
				<ul>
					<li>
						<a><i class="fab fa-github"></i></a>
					</li>
					<li>
						<a><i class="fab fa-facebook"></i></a>
					</li>
					<li>
						<a><i class="fab fa-instagram"></i></a>
					</li>
					<li>
						<a><i class="fab fa-twitter"></i></a>
					</li>
				</ul>
			</div>
		</nav>
	</div>
</body>

<script>
	$(document).ready(function () {
		setInterval(function () {
			$.ajax({
				url: '/Shared/AuthenticationStatus', // Twoja ścieżka do akcji kontrolera obsługującej część widoku
				type: 'GET',
				success: function (result) {
					$('#authenticationStatusContainer').html(result);
				}
			});
		}, 1000); // Odświeżanie co 5 sekund (zmień wartość według potrzeb)
	});
</script>

</html>