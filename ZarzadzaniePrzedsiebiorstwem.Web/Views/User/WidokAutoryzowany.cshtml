@model ZarzadzaniePrzedsiebiorstwem.Model.Authentication.User

<style>
    section.section {
        margin-top: 0;
        padding-top: 1.5rem;
        margin-bottom: 0;
        padding-bottom: 1.5rem;
        height: calc(100vh - 3rem);
        background-color: #8EC5FC;
        background-image: linear-gradient(62deg, #8EC5FC 0%, #E0C3FC 100%);
    }

    .has-text-centered {
        text-align: center;
    }

    /* Styl dla pionowego panelu */
    .vertical-panel {
        position: fixed;
        top: 5.5rem;
        left: 0;
        width: 12%;
        height: 100%;
        background-color: rgba(142, 197, 252, 0.0); /* Tutaj użyj rgba z odpowiednią przezroczystością */
        padding: 1rem;
        display: flex;
        flex-direction: column;
    }

        /* Styl dla linków w pionowym panelu */
        .vertical-panel a {
            color: #fff;
            text-decoration: none;
            margin-bottom: 10px;
        }

            /* Styl dla aktywnego linku w pionowym panelu */
            .vertical-panel a.is-active {
                font-weight: bold;
            }

        .vertical-panel .button {
            margin-bottom: 10px;
            border: 1px solid #fff; /* Białe obramowanie */
            background-color: transparent; /* Przezroczyste tło */
            color: #fff; /* Kolor tekstu */
        }

            /* Styl dla aktywnego przycisku w pionowym panelu */
            .vertical-panel .button.is-active {
                background-color: transparent;
                border-color: #fff; /* Białe obramowanie */
                color: #fff; /* Kolor tekstu */
            }
</style>

<section class="section">
    <div class="message-body has-text-centered">
        Zostałeś pomyślnie zalogowany: @Model.Login
    </div>

    <div class="vertical-panel">
        <a href="#" class="is-active button">Przycisk 1</a>
        <a href="#" class="is-active button">Przycisk 2</a>
        <a href="#" class="is-active button">Przycisk 3</a>
        <!-- Dodaj więcej przycisków w pionowym panelu w razie potrzeby -->
    </div>
</section>
